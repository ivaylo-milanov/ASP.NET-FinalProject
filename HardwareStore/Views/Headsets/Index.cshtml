@model IEnumerable<HeadsetViewModel>

<div>
    <div class="filter">
        <form method="get" data-url="@Url.Action("FilterHeadsets", "Headsets")" data-container="#headsets">
            <div class="filter-categories">
                @await Component.InvokeAsync("FilterComponent", new {
                    name = nameof(HeadsetViewModel.Manufacturer),
                    values = Model.Select(m => m.Manufacturer).Distinct()
                })

                @await Component.InvokeAsync("FilterComponent", new {
                    name = nameof(HeadsetViewModel.Form),
                    values = Model.Select(m => m.Form).Distinct()
                })

                @await Component.InvokeAsync("FilterComponent", new {
                    name = nameof(HeadsetViewModel.Interface),
                    values = Model.Select(m => m.Interface).Distinct()
                })

                @await Component.InvokeAsync("FilterComponent", new {
                    name = nameof(HeadsetViewModel.NoiseIsolation),
                    values = Model.Select(m => m.NoiseIsolation).Distinct()
                })

                @await Component.InvokeAsync("FilterComponent", new {
                    name = nameof(HeadsetViewModel.Type),
                    values = Model.Select(m => m.Type).Distinct()
                })

                @await Component.InvokeAsync("FilterComponent", new {
                    name = nameof(HeadsetViewModel.Compatibility),
                    values = Model.Select(m => m.Compatibility).Distinct()
                })

                @await Component.InvokeAsync("FilterComponent", new {
                    name = nameof(HeadsetViewModel.Color),
                    values = Model.Select(m => m.Color).Distinct()
                })
            </div>
            <div class="additional-filters">
                @await Component.InvokeAsync("OrderComponent")
            </div>
        </form>
    </div>
    <div id="headsets">
        @await Component.InvokeAsync("ProductsComponent", new { models = Model })
    </div>
</div>

@section Scripts {
   <script src="~/js/filter.js"></script>
}